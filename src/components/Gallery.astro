---
const { centered } = Astro.props;

const isCentered = true;

---

<div class="mx-4 mb-8 flex">
  <div class="horizontal-snap" class:list={[{'centered': isCentered}]}>
    <slot />
  </div>
</div>
<style is:global>
  .horizontal-snap {
    margin: 0 auto;
    display: grid;
    grid-auto-flow: column;
    gap: 1rem;
    height: calc(250px);
    overflow-y: auto;
    overscroll-behavior-x: contain;
    scroll-snap-type: x mandatory;
  }

  .centered {
    justify-content: center;
  }

  .horizontal-snap > div {
    scroll-snap-align: center;
    margin-left: 0rem;
    margin-right: 0rem;
  }

  .horizontal-snap img {
    width: 250px;
    max-width: none;
    object-fit: contain;
    border-radius: 1rem;
  }
</style>
