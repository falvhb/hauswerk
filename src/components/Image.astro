---
import { Picture } from "@astrojs/image/components";
const { filename, alt, aspect = "1:1" } = Astro.props;
---

<div class="container mx-auto max-w-2xl rounded-2xl text-center p-4 mb-8">
  <Picture
    src={"/images/" + filename}
    aspectRatio={aspect || "1:1"}
    widths={[200, 400, 800]}
    sizes="(max-width: 800px) 100vw, 800px"
    alt={alt}
  />
</div>
